<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ViewFlipper
            android:id="@+id/news_viewflipper"
            android:layout_width="match_parent"
            android:layout_height="261dp">

            <ImageView
                android:id="@+id/artistflower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/artisteat" />

            <ImageView
                android:id="@+id/czflower"
                android:layout_width="415dp"
                android:layout_height="275dp"
                app:srcCompat="@drawable/czflower" />

            <ImageView
                android:id="@+id/czpolice"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                app:srcCompat="@drawable/czpolice" />

            <ImageView
                android:id="@+id/rosemusic"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                app:srcCompat="@drawable/rosemusicconcert" />

            <ImageView
                android:id="@+id/shiman1"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                app:srcCompat="@drawable/shiman1" />

            <ImageView
                android:id="@+id/shiman2"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                app:srcCompat="@drawable/shiman2" />

            <ImageView
                android:id="@+id/shimanblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shimanblueroad" />

            <ImageView
                android:id="@+id/taoyuanbanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/taoyuanbanner" />

            <ImageView
                android:id="@+id/taoyuanflower"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                app:srcCompat="@drawable/taoyuanflower" />

        </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/newList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>