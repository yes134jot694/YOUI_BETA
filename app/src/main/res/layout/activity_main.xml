<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/icon_toui_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="539dp"
        android:layout_alignTop="@+id/img_header"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="-2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="539dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_area"
                android:layout_width="154dp"
                android:layout_height="128dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="11dp"
                app:srcCompat="@mipmap/icon_area" />

            <TextView
                android:id="@+id/area"
                android:layout_width="167dp"
                android:layout_height="72dp"
                android:layout_below="@+id/img_area"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:text="選擇地區"
                android:textAlignment="center"
                android:textColor="#E22E2B2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_style"
                android:layout_width="152dp"
                android:layout_height="132dp"
                android:layout_alignTop="@+id/img_area"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                app:srcCompat="@mipmap/icon_eat" />

            <TextView
                android:id="@+id/style"
                android:layout_width="158dp"
                android:layout_height="71dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="-3dp"
                android:text="餐廳菜單類型"
                android:textAlignment="center"
                android:textColor="#E22E2B2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_friendly"
                android:layout_width="182dp"
                android:layout_height="138dp"
                android:layout_alignTop="@+id/img_area"
                android:layout_alignParentStart="true"
                android:layout_marginStart="105dp"
                android:layout_marginTop="208dp"
                app:srcCompat="@mipmap/icon_friendly" />

            <TextView
                android:id="@+id/friendly"
                android:layout_width="171dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/img_area"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="358dp"
                android:layout_marginEnd="117dp"
                android:text="友善類型"
                android:textAlignment="center"
                android:textColor="#E22E2B2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bar_search"
                android:layout_width="236dp"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="77dp"
                android:layout_marginTop="411dp"
                app:srcCompat="@mipmap/bar_search" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
